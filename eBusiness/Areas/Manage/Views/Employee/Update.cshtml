@model UpdateEmployeeVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Full Name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" class="form-control" placeholder="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary">Salary</label>
                    <input asp-for="Salary" class="form-control" placeholder="Salary">
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstagramUrl">Instagram Url</label>
                    <input asp-for="InstagramUrl" class="form-control" placeholder="Instagram Url">
                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterLink">Twitter Link</label>
                    <input asp-for="TwitterLink" class="form-control" placeholder="Twitter Link">
                    <span asp-validation-for="TwitterLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacebookLink">Facebook Link</label>
                    <input asp-for="FacebookLink" class="form-control" placeholder="Facebook Link">
                    <span asp-validation-for="FacebookLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PositionId"></label>
                    <select asp-for="PositionId" asp-items="@ViewBag.Position"></select>
                    <span asp-validation-for="PositionId"></span>
                </div>
                <div class="form-check form-check-flat form-check-primary">
                </div>
                <td>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </td>
            </form>
        </div>
    </div>
</div>
