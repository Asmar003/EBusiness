 
@model ICollection<Employee>

<div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Full Name</th>
                                <th>Salary</th>
                                <th>Position</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (Employee item in Model)
                        {
                          <tr>
                              <td><img src="~/assets/img/@item.ImageUrl"></td>
                              <td>@item.FullName</td>
                              <td>@item.Salary</td>
                              <td>@item.Position.Name</td>
                              <td><a asp-action="Update" asp-area="Manage" asp-controller="Employee" asp-route-id="@item.Id">Update</a></td>
                              <td><a asp-action="Delete" asp-area="Manage" asp-controller="Employee" asp-route-id="@item.Id">Delete</a></td>
                          </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
